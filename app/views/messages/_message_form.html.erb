<%=form_for message, remote: true, authenticity_token: true, multipart: true do |f|%>
  <%= f.label :user_name%>
  <%= f.text_field :username %><br/>
  <%= f.label :your_message%>
  <%= f.text_area :content, class: "form-control", data: {textarea: "message"}%>
  <br/><br/>
  <%# f.file_field :picture %>
  <%= f.hidden_field :chatroom_id, value: chatroom.id %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "message"}%>
<%end%>


